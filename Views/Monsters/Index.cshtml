@model MvcMonster.Models.MonsterTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Monsters" asp-action="Index" method="get">
    <p>
        <select asp-for="MonsterType" asp-items="Model.Types">
            <option value="">All</option>
        </select>

        Called: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].Called)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].Hp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].Damage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Monsters) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Called)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Damage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
